@model IEnumerable<Task_2.Models.Department>

<div class="container mt-4">
    <h2 class="text-center mb-4">Departments</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="row">
        @foreach (var dept in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card shadow p-3">
                    <h5 class="card-title">@dept.Name</h5>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Edit" asp-route-id="@dept.DepartmentId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@dept.DepartmentId" class="btn btn-info btn-sm">Details</a>
                        <form asp-action="Delete" asp-route-id="@dept.DepartmentId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

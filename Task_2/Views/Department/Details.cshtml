<h2>Department: @Model.Name</h2>

<button id="loadBtn" class="btn btn-primary" data-id="@Model.DepartmentId">Load Employees</button>

<div id="employeesContainer">
   
</div>

@section Scripts {
    <script>
        document.getElementById("loadBtn").addEventListener("click", function () {
            let deptId = this.getAttribute("data-id");

            fetch(`/Department/GetEmployeesAjax/${deptId}`)
                .then(res => res.text())   
                .then(html => {
                    document.getElementById("employeesContainer").innerHTML = html;
                });
        });
    </script>
}
